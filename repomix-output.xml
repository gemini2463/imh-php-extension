                    }
                }
                if ($has_ioncube) {
                    echo "<td class='imh-cell imh-big' style='color:green' title='Enabled'>&#10004;</td>";
                } else {
                    echo "<td class='imh-cell imh-big' style='color:#b00' title='Not enabled'>&#10008;</td>";
                }
            } else {
                echo "<td class='imh-cell imh-big' style='color:#777'>?</td>";
            }
        }
        echo "</tr>";

        echo "</table></div>";
    }
}


echo "</div>";













// ==========================
